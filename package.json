{
  "name": "versecon-link",
  "version": "2.4.0",
  "description": "Star Citizen Log Reader & Overlay Controller for VerseCon",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder"
  },
  "keywords": [],
  "author": "VerseCon",
  "license": "ISC",
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.5",
    "chokidar": "^3.5.3",
    "electron-updater": "^6.1.7",
    "express": "^4.22.1",
    "obs-websocket-js": "^5.0.5",
    "socket.io-client": "^4.7.4",
    "tail": "^2.2.6",
    "ws": "^8.19.0"
  },
  "build": {
    "appId": "com.versecon.link",
    "productName": "VerseCon Link",
    "publish": {
      "provider": "github",
      "owner": "winstonedd-dversecon",
      "repo": ".gemini"
    },
    "win": {
      "target": "nsis"
    },
    "protocols": {
      "name": "VerseCon Link Protocol",
      "schemes": [
        "versecon-link"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
